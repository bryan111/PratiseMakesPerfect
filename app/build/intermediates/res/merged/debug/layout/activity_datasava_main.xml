<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用Sp进行简单的数据存储，一段时间内删除部分数据" />
    <Button
        android:id="@+id/internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件内部存储，使用Context.OpenFileInput()和Context.OpenFileOutput" />
    
      <Button
        android:id="@+id/external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件外部存储，使用FileOutputStream和FileInputStream" />
        <Button
        android:id="@+id/assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用asset本地保存CSV文件，并且解析CSV文件，读取显示" />

</LinearLayout>